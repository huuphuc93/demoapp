<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/bookmarked' %>
    </section>
  </aside>
 <div class="col-md-8">
    <% if @user.bookmarks.any? %>
      <h3>Bookmarks (<%= @user.bookmarks.count %>)</h3>
      <ol class="microposts">
        <%# @user.bookmarks.each do |bookmark| %>
          <!-- <li> -->
            <%#= link_to bookmark.post.title, bookmark.post %>
          <!-- </li> -->
        <%# end %>
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>
