<% if @tag.nil? == false %>
  <h1>Tags: <span class=" btn btn-info"><%= @tag.name %></span></h1>
<% end %>
<div class="col-md-12">
  <% if @post.any? %>
    <h3>Posts (<%= @post.count %>)</h3>
    <ol class="microposts">
      <%= render @post %>
    </ol>
    <%= will_paginate @post %>
  <% end %>
</div>
