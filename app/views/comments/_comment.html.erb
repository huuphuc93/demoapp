<li>
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user">
    <%= link_to comment.user.name, comment.user %>
  </span>
  <span class="content">
    <%= comment.content %>
    <% if logged_in? && current_user.admin? || current_user?(@post.user)%>
      <%= link_to "delete", post_comment_path(post_id: @post.id, id: comment.id), method: :delete, data: { confirm: "You sure?" }%>
    <% end %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago
  </span>
</li>
